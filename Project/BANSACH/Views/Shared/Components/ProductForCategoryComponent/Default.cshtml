    .titlehome {
        float: left;
        width: 100%;
        background: #fff;
        border: 2px solid #ccc;
        height: 53px;
    }

        .titlehome i {
            line-height: 50px;
            color: #fff;
            height: 50px;
            padding-right: 50px;
            background-size: 50px 50px;
            background-position: 25px 0;
            background-repeat: no-repeat;
            background-color: #a6a6a6;
            margin-bottom: -4px;
            border-radius: 0 50px 50px 0;
            width: 120px;
            float: left;
            display:block;
        }

        .titlehome span {
            width: 48px;
            height: 48px;
            margin: 1px 0 -4px -49px;
            background: url(/image-common/favicon2.png) center no-repeat #fff;
            font-weight: 700;
            color: #010101;
            float: left;
            display: block;
            border-radius: 50px;
        }

        .titlehome i, .titlehome span {
            font-size: 24px;
            text-align: center;
        }

        .titlehome h2 {
            line-height: 41px;
            padding-left: 20px;
            padding-top: 5px;
            font-size: 20px;
            text-decoration: none;
            color: #010101;
            margin:0px;
            float:left;
        }

            .titlehome h2 a {
                color: #e77e24;
            }

        .titlehome a.viewall {
            color: #e77e24;
            margin-right: 10px;
        }

        .titlehome .menuchild a, .titlehome a.viewall {
            font-size: 14px;
            font-weight: 400;
            text-transform: uppercase;
        }

        .titlehome .menuchild, .titlehome a.viewall {
            float: right;
            margin-top: 13px;
        }
    </style>
<section id="" class="home-module-products">
    <div class="hmodule-products-body">
        <div class="wrapper">

            <div class="inner">

@if (Model != null && Model.Count > 0)
{
    @foreach (var item in Model)
    {
        if (item.productModelViews != null && item.productModelViews.Count > 0)
        {
            <div class="padmb">
                <div class="title-sale">
                    <p><a title="@item.CategoryModelView.name">@item.CategoryModelView.name</a></p>
                </div>
            </div>
            <div class="see-more" style="display: inline-block;width:100%;margin-bottom: 10px;">
                <a href="/san-pham/@item.CategoryModelView.id" title="@item.CategoryModelView.name" class="viewall" style="float: right;">Xem tất cả</a>
            </div>
            @foreach (var itemProduct in item.productModelViews.Take(8))
            {
                <div class="grid__item pd-left10 large--one-quarter medium--one-third small--one-half">
                    <a href="/chi-tiet-san-pham/@itemProduct.id" class="product-item">
                        <div class="product-img">
                            @if (itemProduct.ImageModelView != null && itemProduct.ImageModelView.Count > 0)
                            {
                                <img id="1027125194" class="lazyload" src="/product-image/@itemProduct.ImageModelView[0].name" data-src="/product-image/@itemProduct.ImageModelView[0].name" alt="@itemProduct.name">
                            }

                           @*  <div class="product-tagsaleoff">
                                -20%
                            </div> *@
                        </div>
                        <div class="product-title text-center">
                            @itemProduct.name
                        </div>
                                        <div class="star-rating-formats">
                                            <span style="width:0%">

                                                @if (itemProduct.star.HasValue && itemProduct.star.Value > 0)
                                                {
                                                    int start_number = 5 - itemProduct.star.Value;
                                                    @for (int i = 1; i <= itemProduct.star.Value; i++)
                                                    {
                                                        <i class="fa fa-star" aria-hidden="true" style="color:#ffc107;"></i>
                                                    }
                                                    @for (int i = 1; i <= start_number; i++)
                                                    {
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                    }
                                                }
                                                else
                                                {
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                    <i class="fa fa-star" aria-hidden="true" style="color:black"></i>
                                                }
                                            </span>
                                        </div>
                        <div class="product-price clearfix">
                            @if (!string.IsNullOrEmpty(itemProduct.price_sell_str))
                            {
                                <span class="current-price">@itemProduct.price_sell_str ₫</span>
                            }
                            @if (!string.IsNullOrEmpty(itemProduct.price_reduced_str))
                            {
                                <span class="original-price"><s>@itemProduct.price_reduced_str ₫</s> </span>
                            }
                        </div>
                    </a>
                </div>
            }
        }
    }
}

            </div>
        </div>
    </div>
</section>