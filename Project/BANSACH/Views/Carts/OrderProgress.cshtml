@section Styles{
    <link href="~/public/customer/bootstrap-sweetalert-master/dist/sweetalert.css" rel="stylesheet" />
    <style>
        .custom-star .star-color {
            margin-right: 8px;
            color: #fcc72a;
        }

        .custom-star .bi-star-fill {
            font-size: 20px !important;
        }

        .rate {
            float: left;
            height: 46px;
            padding: 0 10px;
            position: relative;
        }

            .rate:not(:checked) > input {
                position: absolute;
                top: -9999px;
            }

            .rate:not(:checked) > label {
                float: right;
                width: 1em;
                overflow: hidden;
                white-space: nowrap;
                cursor: pointer;
                font-size: 30px;
                color: #ccc;
            }

                .rate:not(:checked) > label:before {
                    content: '★ ';
                }

            .rate > input:checked ~ label {
                color: #ffc700;
            }

            .rate:not(:checked) > label:hover,
            .rate:not(:checked) > label:hover ~ label {
                color: #deb217;
            }

            .rate > input:checked + label:hover,
            .rate > input:checked + label:hover ~ label,
            .rate > input:checked ~ label:hover,
            .rate > input:checked ~ label:hover ~ label,
            .rate > label:hover ~ input:checked ~ label {
                color: #c59b08;
            }

            .rate .custom-star-index {
                float: right;
                display: inline-block;
                font-size: 14px;
                width: 1em;
                position: absolute;
                right: -6px;
                bottom: 5px;
            }
            .box-container table thead th{
                padding: 15px;
                 vertical-align: middle;
            }
             .box-container table tbody td{
                padding: 10px;
                vertical-align: middle;
            }
       .box-section .box-content-custome{
           width:70%;
       }
        
    </style>
}
