                                                    <button type="button" class="js-qty__adjust js-qty__adjust--minus icon-fallback-text quantity-left-minus minus" onclick="minusQuantity(@classQuantiy,@item.id)">
                                                        <span class="icon icon-minus" aria-hidden="true"></span>
                                                        <span class="fallback-text" aria-hidden="true">−</span>
                                                        <span class="visually-hidden">Giảm số lượng sản phẩm đi 1</span>
                                                    </button>
                                                        <input type="number" class="js-qty__num input-number @classQuantiy" min="1" value="@item.quantity" aria-label="quantity" oninput="this.value = !!this.value && Math.abs(this.value) >= 1 ? Math.abs(this.value) : 1" pattern="[0-9]*" name="quantity">
